<?xml version="1.0" encoding="utf-8"?>
<resources>
<?xml version="1.0" encoding="utf-8"?><resources></resources>
</resources>

    <!-- Modern rounded shapes for cards, buttons, chips -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <!-- Pill-shaped buttons (like new YouTube player) -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">50dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- Rounded CardView -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

